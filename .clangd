CompileFlags:
  Add:
    - "-DIRAM_ATTR="
    - "-DESP_PLATFORM"
  Remove:
    - -mlong-calls
    - -mlongcalls
    - -march=*
    - -fno-shrink-wrap
    - -fno-tree-switch-conversion
    - -fstrict-volatile-bitfields

Diagnostics:
  Suppress:
    - pp_file_not_found
    - drv_unknown_argument

---

If:
  PathMatch: .*\.cpp$
CompileFlags:
  Add:
    - -std=gnu++20
